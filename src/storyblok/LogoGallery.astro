---
import { storyblokEditable } from '@storyblok/astro'
import RichText from './utils/RichText.astro'
import InlineSvg from './utils/InlineSvg.astro'
import NetlifyImage from './utils/NetlifyImage.astro'
const { blok } = Astro.props

blok.logos?.map((item) => (item.isSvg = item.image.filename.endsWith('.svg')))
---

<section class="container" {...storyblokEditable(blok)}>
  <div class="w-2/3 sm:w-1/2 lg:w-1/3 mx-auto text-center mb-6">
    <RichText content={blok.title} />
  </div>

  <ul class="flex justify-center gap-x-6 sm:gap-x-12 lg:gap-x-24">
    {
      blok.logos?.map((logo) => (
        <li class="py-3 lg:py-5 w-16 h-auto md:w-20 lg:w-24 mx-auto sm:mx-0 text-base-content/50">
          {logo.isSvg && <InlineSvg src={logo.image.filename} />}
          {!logo.isSvg && <NetlifyImage src={logo.image.filename} alt={logo.image.alt} />}
        </li>
      ))
    }
  </ul>
</section>
