---
import { storyblokEditable } from '@storyblok/astro'
import RichText from './utils/RichText.astro'
import InlineSvg from './utils/InlineSvg.astro'
import Heading from './utils/Heading.astro'
const { blok } = Astro.props
---

<!-- Contact Us -->
<section class="container" {...storyblokEditable(blok)}>
  <div class="max-w-xl mx-auto">
    {
      blok.title && (
        <div class="text-center">
          <RichText content={blok.title} />
        </div>
      )
    }
  </div>

  <div class="mt-12 max-w-lg mx-auto">
    <div class="flex flex-col border border-base-content/50 rounded-xl p-4 sm:p-6 lg:p-8">
      <Heading tag={blok.formTag} classlist="mb-8 text-xl font-semibold" content={blok.formTitle} />

      <form>
        <div class="grid gap-4 lg:gap-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
            <div>
              <label for="prenom" class="block mb-2 text-sm text-base-content/85 font-medium">Prénom</label>
              <input
                type="text"
                name="prenom"
                id="prenom"
                class="py-2.5 sm:py-3 px-4 block w-full border-base-content/50 rounded-lg sm:text-sm focus:border-accent focus:ring-accent disabled:opacity-50 disabled:pointer-events-none"
              />
            </div>

            <div>
              <label for="nom" class="block mb-2 text-sm text-base-content/85 font-medium">Nom</label>
              <input
                type="text"
                name="nom"
                id="nom"
                class="py-2.5 sm:py-3 px-4 block w-full border-base-content/50 rounded-lg sm:text-sm focus:border-accent focus:ring-accent disabled:opacity-50 disabled:pointer-events-none"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
            <div>
              <label for="email" class="block mb-2 text-sm text-base-content/85 font-medium">Email</label>
              <input
                type="email"
                name="email"
                id="email"
                autocomplete="email"
                class="py-2.5 sm:py-3 px-4 block w-full border-base-content/50 rounded-lg sm:text-sm focus:border-accent focus:ring-accent disabled:opacity-50 disabled:pointer-events-none"
              />
            </div>

            <div>
              <label for="telephone" class="block mb-2 text-sm text-base-content/85 font-medium">
                Numéro de téléphone
              </label>
              <input
                type="text"
                name="telephone"
                id="telephone"
                class="py-2.5 sm:py-3 px-4 block w-full border-base-content/50 rounded-lg sm:text-sm focus:border-accent focus:ring-accent disabled:opacity-50 disabled:pointer-events-none"
              />
            </div>
          </div>
          <!-- End Grid -->

          <div>
            <label for="message" class="block mb-2 text-sm text-base-content/85 font-medium">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="py-2.5 sm:py-3 px-4 block w-full border-base-content/50 rounded-lg sm:text-sm focus:border-accent focus:ring-accent disabled:opacity-50 disabled:pointer-events-none">
            </textarea>
          </div>
        </div>
        <!-- End Grid -->

        <div class="mt-6 grid">
          <button type="submit" class="btn btn-accent">Envoyer</button>
        </div>

        <div class="mt-3 text-center">
          <p class="text-sm text-base-content/50"><RichText content={blok.info} /></p>
        </div>
      </form>
    </div>
    <!-- End Card -->
  </div>

  <div class="mt-12 grid sm:grid-cols-2 lg:grid-cols-3 items-center gap-4 lg:gap-8">
    <!-- Icon Block -->
    <a
      class="group flex flex-col h-full text-center rounded-lg hover:bg-gray-100 focus:outline-hidden focus:bg-gray-100 p-4 sm:p-6"
      href="#">
      <svg
        class="size-9 text-gray-800 mx-auto"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle><path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path><path
          d="M12 17h.01">
        </path>
      </svg>
      <div class="mt-5">
        <h3 class="text-lg font-semibold text-gray-800">Knowledgebase</h3>
        <p class="mt-1 text-gray-500">We're here to help with any questions or code.</p>
        <p class="mt-5 inline-flex items-center gap-x-1 font-medium text-accent">
          Contact support
          <svg
            class="shrink-0 size-4 transition ease-in-out group-hover:translate-x-1 group-focus:translate-x-1"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </p>
      </div>
    </a>
    <!-- End Icon Block -->

    <!-- Icon Block -->
    <a
      class="group flex flex-col h-full text-center rounded-lg hover:bg-gray-100 focus:outline-hidden focus:bg-gray-100 p-4 sm:p-6"
      href="#">
      <svg
        class="size-9 text-gray-800 mx-auto"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <path d="M14 9a2 2 0 0 1-2 2H6l-4 4V4c0-1.1.9-2 2-2h8a2 2 0 0 1 2 2v5Z"></path><path
          d="M18 9h2a2 2 0 0 1 2 2v11l-4-4h-6a2 2 0 0 1-2-2v-1">
        </path>
      </svg>
      <div class="mt-5">
        <h3 class="text-lg font-semibold text-gray-800">FAQ</h3>
        <p class="mt-1 text-gray-500">Search our FAQ for answers to anything you might ask.</p>
        <p class="mt-5 inline-flex items-center gap-x-1 font-medium text-accent">
          Visit FAQ
          <svg
            class="shrink-0 size-4 transition ease-in-out group-hover:translate-x-1 group-focus:translate-x-1"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </p>
      </div>
    </a>
    <!-- End Icon Block -->

    <!-- Icon Block -->
    <a
      class="group flex flex-col h-full text-center rounded-lg hover:bg-gray-100 focus:outline-hidden focus:bg-gray-100 p-4 sm:p-6"
      href="#">
      <svg
        class="size-9 text-gray-800 mx-auto"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <path d="m7 11 2-2-2-2"></path><path d="M11 13h4"></path><rect width="18" height="18" x="3" y="3" rx="2" ry="2">
        </rect>
      </svg>
      <div class="mt-5">
        <h3 class="text-lg font-semibold text-gray-800">Developer APIs</h3>
        <p class="mt-1 text-gray-500">Check out our development quickstart guide.</p>
        <p class="mt-5 inline-flex items-center gap-x-1 font-medium text-accent">
          Contact sales
          <svg
            class="shrink-0 size-4 transition ease-in-out group-hover:translate-x-1 group-focus:translate-x-1"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </p>
      </div>
    </a>
    <!-- End Icon Block -->
  </div>
</section>
<!-- End Contact Us -->
